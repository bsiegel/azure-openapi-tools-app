{
    "compilerOptions": {
      "allowJs": false,
      "esModuleInterop": true,
      "lib": ["es2015", "es2017"],
      "module": "commonjs",
      "moduleResolution": "node",
      "newLine": "LF",
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noUnusedLocals":true,
      "noUnusedParameters": true,
      "outDir": "./dist",
      "pretty": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "strictNullChecks": true,
      "strictPropertyInitialization": true,
      "target": "es2017",
    },
    "compileOnSave": true,
    "include": [
      "./src/**/*"
    ]
  }